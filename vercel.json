{
  "version": 2,
  "name": "shopify-learnworlds-integration",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SHOPIFY_API_KEY": "@shopify_api_key",
    "SHOPIFY_API_SECRET": "@shopify_api_secret",
    "SHOPIFY_APP_URL": "@shopify_app_url",
    "SHOPIFY_SCOPES": "@shopify_scopes",
    "SHOPIFY_API_VERSION": "@shopify_api_version",
    "LEARNWORLDS_API_BASE": "@learnworlds_api_base",
    "LEARNWORLDS_CLIENT_ID": "@learnworlds_client_id",
    "LEARNWORLDS_AUTH_TOKEN": "@learnworlds_auth_token",
    "DATABASE_URL": "@database_url",
    "JWT_SECRET": "@jwt_secret"
  }
}