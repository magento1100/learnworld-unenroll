# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_APP_URL=https://your-app.vercel.app
SHOPIFY_SCOPES=read_orders,write_orders,read_customers,write_customers
SHOPIFY_API_VERSION=2024-01

# LearnWorlds Configuration
LEARNWORLDS_API_BASE=https://your-learnworlds-domain.learnworlds.com/admin/api/v2
LEARNWORLDS_CLIENT_ID=your_learnworlds_client_id
LEARNWORLDS_AUTH_TOKEN=your_learnworlds_auth_token

# Database Configuration (for storing shop data)
DATABASE_URL=mysql://username:password@host:port/database_name

# JWT Secret for session management
JWT_SECRET=your_jwt_secret_key

# Node Environment
NODE_ENV=production